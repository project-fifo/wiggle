{sub_dirs, ["rel", "apps/*"]}.
{lib_dirs, ["apps"]}.
{erl_opts, [{i, "apps"},
            {i, "deps"},
            {i, "../../deps/cowboy/include"},
            debug_info,
            {parse_transform, lager_transform}, warnings_as_errors]}.
{cover_enabled, true}.
{eunit_opts, [{report,{eunit_surefire,[{dir,"."}]}}]}.
{edoc_opts, [{dir, "../../doc"}]}.
