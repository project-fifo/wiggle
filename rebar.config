  {cowboy, ".*", {git, "https://github.com/extend/cowboy.git", {tag, "1.0.0"}}},
  {eplugin, ".*", {git, "http://github.com/Licenser/eplugin.git", {branch, master}}},
  {msgpack, ".*", {git, "https://github.com/project-fifo/msgpack-erlang.git", {tag, "0.2.3-dialyzer"}}},
  {e2qc, ".*", {git, "git://github.com/arekinath/e2qc.git", "HEAD"}},
  {jsxd, ".*", {git, "https://github.com/Licenser/jsxd.git", {branch, master}}},
  {ensq, ".*", {git, "git://github.com/project-fifo/ensq.git", {branch, master}}},
