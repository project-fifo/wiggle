<service_bundle type='manifest' name='wiggle'>
  <service
      name='network/wiggle'
      type='service'
      version='0.3.0'>
    <create_default_instance enabled='false' />
    <single_instance />
    <dependency
        name='net-loopback'
        grouping='require_all'
        restart_on='none'
        type='service'>
      <service_fmri value='svc:/network/loopback' />
    </dependency>

    <dependency
        name='net-physical'
        grouping='require_all'
        restart_on='none'
        type='service'>
      <service_fmri value='svc:/network/physical' />
    </dependency>

    <dependency
        name='fs'
        grouping='require_all'
        restart_on='none' type='service'>
      <service_fmri value='svc:/system/filesystem/local'/>
    </dependency>

    <exec_method
        type='method'
        name='start'
        exec='/opt/local/fifo-wiggle/bin/wiggle %m'
        timeout_seconds='30'>
      <method_context>
        <method_credential user='wiggle' group='www' />
        <method_environment>
          <envvar name='PATH' value='/usr/gnu/bin:/usr/bin:/usr/sbin'/>
          <envvar name='HOME' value='/var/db/wiggle'/>
          <envvar name='ERL_CRASH_DUMP' value='/var/db/wiggle'/>
        </method_environment>
      </method_context>
    </exec_method>

    <exec_method
        name='restart'
        type='method'
        exec='/opt/local/fifo-wiggle/bin/wiggle %m'
        timeout_seconds='60'>
      <method_context>
        <method_credential user='wiggle' group='www' />
        <method_environment>
          <envvar name='PATH' value='/usr/gnu/bin:/usr/bin:/usr/sbin'/>
          <envvar name='HOME' value='/var/db/wiggle'/>
          <envvar name='ERL_CRASH_DUMP' value='/var/db/wiggle'/>
        </method_environment>
      </method_context>
    </exec_method>

    <exec_method
        name='stop'
        type='method'
        exec='/opt/local/fifo-wiggle/bin/wiggle smf-stop'
        timeout_seconds='60'>
      <method_context>
        <method_credential user='wiggle' group='www' />
        <method_environment>
          <envvar name='PATH' value='/usr/gnu/bin:/usr/bin:/usr/sbin'/>
          <envvar name='HOME' value='/var/db/wiggle'/>
          <envvar name='ERL_CRASH_DUMP' value='/var/db/wiggle'/>
        </method_environment>
      </method_context>
    </exec_method>

    <template>
      <common_name>
        <loctext xml:lang='C'>
          Project FiFo's API Server.
        </loctext>
      </common_name>
    </template>
  </service>
</service_bundle>
